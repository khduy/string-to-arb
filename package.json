{
  "name": "string-to-arb-extractor",
  "displayName": "String to ARB Extractor",
  "description": "Extracts strings to an ARB file and replaces them with a prefixed key",
  "version": "0.0.2",
  "publisher": "khduy",
  "license": "MIT",
  "icon": "icons/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/khduy/string-to-arb-extractor"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:dart"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "String to ARB Extractor",
      "properties": {
        "stringToArbExtractor.arbFolderPath": {
          "type": "string",
          "default": "./lib/l10n",
          "description": "Path to the folder containing ARB files for extraction and translation."
        },
        "stringToArbExtractor.sourceLanguage": {
          "type": "string",
          "default": "en",
          "description": "Source language code (e.g., 'en' for English)."
        },
        "stringToArbExtractor.fileNamePattern": {
          "type": "string",
          "default": "intl_{lang}.arb",
          "description": "Pattern for ARB file names. Use {lang} as a placeholder for the language code."
        },
        "stringToArbExtractor.autoTranslate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically translate extracted strings to target languages."
        },
        "stringToArbExtractor.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini API key for translation."
        },
        "stringToArbExtractor.prefix": {
          "type": "string",
          "default": "intl",
          "description": "Prefix for the extracted key (e.g., intl.keyName)."
        }
      }
    },
    "commands": [
      {
        "command": "string-to-arb-extractor.extractString",
        "title": "Extract String to ARB"
      },
      {
        "command": "string-to-arb-extractor.extractStringFromContext",
        "title": "Extract String to ARB"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection && (editorLangId == 'dart' || editorLangId == 'javascript' || editorLangId == 'typescript')",
          "command": "string-to-arb-extractor.extractStringFromContext",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "esbuild": "^0.25.1",
    "eslint": "^8.56.0",
    "vsce": "^2.15.0"
  }
}
